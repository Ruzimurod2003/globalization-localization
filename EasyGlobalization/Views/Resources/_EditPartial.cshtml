@model ResourceEditVM;

<div class="modal fade" id="editModal_@Model.Id" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">@Localizer["Edit resource"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Key" class="control-label">@Localizer["Key"]:</label>
                            <input asp-for="Key" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Value" class="control-label">@Localizer["Value"]:</label>
                            <input asp-for="Value" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CultureName" class="control-label">@Localizer["Old culture"]:</label>
                            <input asp-for="CultureName" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CultureName" class="control-label">@Localizer["Culture"]:</label>
                            <select asp-for="CultureName">
                                @foreach (var cultureName in Model.CultureNames)
                                {
                                    <option value="@cultureName">@cultureName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                <input type="submit" class="btn btn-primary" value="@Localizer["Save changes"]" />
            </div>
        </div>
    </div>
</div>